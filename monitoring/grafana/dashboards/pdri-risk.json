{
    "annotations": {
        "list": []
    },
    "description": "PDRI Risk Intelligence â€” risk scores, trends, compliance, simulations",
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "panels": [
        {
            "title": "High-Risk Entity Count",
            "type": "stat",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 6,
                "w": 6,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "pdri_entities_high_risk_total",
                    "legendFormat": "high risk"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": 0
                            },
                            {
                                "color": "orange",
                                "value": 10
                            },
                            {
                                "color": "red",
                                "value": 50
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Average Risk Score",
            "type": "gauge",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 6,
                "w": 6,
                "x": 6,
                "y": 0
            },
            "targets": [
                {
                    "expr": "avg(pdri_entity_risk_score)",
                    "legendFormat": "avg score"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": 0
                            },
                            {
                                "color": "yellow",
                                "value": 40
                            },
                            {
                                "color": "orange",
                                "value": 60
                            },
                            {
                                "color": "red",
                                "value": 80
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Risk Score Distribution",
            "type": "histogram",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 6,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "pdri_entity_risk_score_bucket",
                    "legendFormat": "{{le}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            }
        },
        {
            "title": "Risk Score Trend (24h)",
            "type": "timeseries",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 6
            },
            "targets": [
                {
                    "expr": "avg(pdri_entity_risk_score) by (entity_type)",
                    "legendFormat": "{{entity_type}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "custom": {
                        "drawStyle": "line",
                        "fillOpacity": 10
                    }
                }
            }
        },
        {
            "title": "Simulations Run",
            "type": "timeseries",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 6
            },
            "targets": [
                {
                    "expr": "rate(pdri_simulations_total[1h])",
                    "legendFormat": "{{scenario_type}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "custom": {
                        "drawStyle": "bars",
                        "fillOpacity": 50
                    }
                }
            }
        },
        {
            "title": "Compliance Posture by Framework",
            "type": "bargauge",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 14
            },
            "targets": [
                {
                    "expr": "pdri_compliance_score",
                    "legendFormat": "{{framework}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "steps": [
                            {
                                "color": "red",
