                                "value": 50
                            },
                            {
                                "color": "yellow",
                                "value": 70
                            },
                            {
                                "color": "green",
                                "value": 85
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Anomalies Detected (24h)",
            "type": "stat",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 12,
                "y": 14
            },
            "targets": [
                {
                    "expr": "increase(pdri_anomalies_detected_total[24h])",
                    "legendFormat": "anomalies"
