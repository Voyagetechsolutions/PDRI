                            {
                                "color": "orange",
                                "value": 5
                            },
                            {
                                "color": "red",
                                "value": 20
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Autonomous Actions (24h)",
            "type": "stat",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 18,
                "y": 14
            },
            "targets": [
                {
                    "expr": "increase(pdri_autonomous_actions_total[24h])",
                    "legendFormat": "actions"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            }
        }
