# =============================================================================
# PDRI - Predictive Data Risk Infrastructure
# Environment Configuration Template
# =============================================================================

# Application Settings
APP_NAME=PDRI
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (Risk history, trajectories, metadata)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pdri
POSTGRES_USER=pdri_user
POSTGRES_PASSWORD=pdri_secure_password_change_me

# Neo4j (Risk Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_secure_password_change_me

# =============================================================================
# Message Bus Configuration
# =============================================================================

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_EVENTS_TOPIC=security-events
KAFKA_CONSUMER_GROUP=pdri-consumers

# =============================================================================
# Service Integration
# =============================================================================

# Shadow AI (when integrated)
SHADOW_AI_ENABLED=false
SHADOW_AI_API_URL=http://localhost:8001

# Dmitry (when integrated)
DMITRY_ENABLED=false
DMITRY_API_URL=http://localhost:8002

# =============================================================================
# Risk Scoring Configuration
# =============================================================================

# Scoring weights (Phase 1 - Rule-based)
SCORE_WEIGHT_EXTERNAL_CONNECTIONS=0.25
SCORE_WEIGHT_AI_INTEGRATIONS=0.30
SCORE_WEIGHT_DATA_VOLUME=0.20
SCORE_WEIGHT_PRIVILEGE_LEVEL=0.15
SCORE_WEIGHT_SENSITIVITY=0.10

# Trajectory windows (days)
TRAJECTORY_WINDOW_SHORT=7
TRAJECTORY_WINDOW_MEDIUM=30
TRAJECTORY_WINDOW_LONG=90

